---
import { Image } from 'astro:assets';
import logo from '@/assets/logoWithText.png';
import LineMdTelegram from './LineMdTelegram.astro';
import ContactForm from './ContactForm.astro';
import TelegramIcon from '@/assets/TelegramIcon.astro';
import LinkedInIcon from '@/assets/LinkedInIcon.astro';
---

<footer id="contact" class="bg-darkGreen py-[7rem]">
	<div class="container max-w-[1200px] mx-auto">
		<div class="flex flex-col sm:flex-row-reverse gap-16 mb-16">
			<ContactForm />
			<div
				class="flex flex-col justify-between items-start gap-4 sm:w-[50%]"
			>
				<Image src={logo} alt="logo" width={120} class="mb-4" />
				<div class="text-background font-Baloo text-2xl">
					<h2 class="font-OpenSans mb-2">
						The power to transform is in your hands
					</h2>
					<h3 class="font-bold">and you know it!</h3>
				</div>

				<ul
					class="flex flex-row justify-between items-start gap-2 text-background font-semibold font-Baloo md:gap-8"
				>
					<li>
						<a href="#services" class="hover:opacity-80">Services</a
						>
					</li>
					<li><a href="#about" class="hover:opacity-80">About</a></li>
					<li>
						<a href="#" class="hover:opacity-80">Testimonials</a>
					</li>
					<li><a href="#" class="hover:opacity-80">Podcast</a></li>
				</ul>
				<div class="flex items-center gap-4">
					<a
						href=" https://t.me/englishcreativehub"
						target="_blank"
						class="font-semibold bg-darkGreen border border-background text-background py-1 px-4 rounded-sm hover:opacity-70 flex items-center justify-center gap-2 w-[130px]"
						><TelegramIcon /> <span>Telegram</span>
					</a>
					<a
						href=" https://t.me/englishcreativehub"
						target="_blank"
						class="font-semibold bg-darkGreen border border-background text-background py-2 px-4 rounded-sm hover:opacity-70 flex items-center justify-center gap-2 w-[130px]"
						><LinkedInIcon /> <span>LinkedIn</span>
					</a>
				</div>
			</div>
			<hr class="mx-auto opacity-45" />
		</div>
	</div>
</footer>

---
import { Image } from 'astro:assets';
import logo from '@/assets/logoWithText.png';
import LinkedInIcon from '@/assets/LinkedInIcon.astro';
import InstagramIcon from '@/assets/InstagramIcon.astro';
import Email from '@/assets/Email.astro';
---

<footer id="contact" class="bg-darkGreen pt-[7rem]">
	<div class="container max-w-[1200px] mx-auto">
		<div class="flex flex-col sm:flex-row-reverse gap-16 mb-16">
			<div class="sm:w-[50%]">
				<script
					is:inline
					async
					data-uid="ae4a443460"
					src="https://english-creative.ck.page/ae4a443460/index.js"></script>
			</div>
			<div
				class="flex flex-col justify-start items-start sm:w-[50%] pt-2 space-y-12"
			>
				<div>
					<Image src={logo} alt="logo" width={120} class="mb-4" />
					<div class="text-background font-Baloo text-2xl">
						<h2 class="font-OpenSans mb-2">
							The power to transform is in your hands
						</h2>
						<h3 class="font-bold">and you know it!</h3>
					</div>
				</div>

				<div class="space-y-8">
					<ul
						class="flex flex-row justify-between items-start gap-2 text-background font-semibold font-Baloo md:gap-8"
					>
						<li>
							<a href="#services" class="hover:opacity-80">Services</a>
						</li>
						<li><a href="#about" class="hover:opacity-80">About</a></li>
						<li>
							<a href="#testimonials" class="hover:opacity-80">Testimonials</a>
						</li>
						<li>
							<a href="/podcast" class="hover:opacity-80">Podcast</a>
						</li>
					</ul>
					<div class="flex flex-wrap items-center gap-4 w-full">
						<a
							href="mailto:hello@english-creative.com"
							target="_blank"
							class="font-semibold bg-darkGreen border border-background text-background py-2 px-2 rounded-sm hover:opacity-70 flex items-center justify-center gap-2"
						>
							<Email class="w-4" />
							<span>Contact Me</span>
						</a>
						<a
							href="https://www.linkedin.com/in/janelle-e-french/"
							target="_blank"
							class="font-semibold bg-darkGreen border border-background text-background py-2 px-2 rounded-sm hover:opacity-70 flex items-center justify-center gap-2"
							><LinkedInIcon class="w-4" /> <span>Get connected</span>
						</a>
						<a
							href="https://www.instagram.com/english_creative_hub/"
							target="_blank"
							class="font-semibold bg-darkGreen border border-background text-background py-2 px-2 rounded-sm hover:opacity-70 flex items-center justify-center gap-2"
							><InstagramIcon class="w-4" />
							<span>Get Creative</span>
						</a>
					</div>
				</div>
			</div>
			<hr class="mx-auto opacity-45" />
		</div>
	</div>
	<p class="text-center text-background pt-16 pb-8 font-Baloo bg-darkGreen">
		Copyright &copy; 2024 English Creative. All rights reserved.
	</p>
</footer>

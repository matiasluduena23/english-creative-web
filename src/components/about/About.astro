---
import { Image } from 'astro:assets';
import meet from '@/assets/meet.jpeg';
import { ChevronRightIcon } from 'lucide-react';
---

<section id="about" class="py-[7rem] bg-white">
	<div class="container max-w-[1200px] mx-auto">
		<div class="flex flex-col-reverse gap-8 sm:flex-row sm:items-center">
			<div class="p-4 pt-2 bg-black rounded-lg">
				<div class="flex items-center gap-2 pb-2 pl-1">
					<div class="rounded-full size-2 bg-slate-700"></div>
					<div class="rounded-full size-2 bg-slate-700"></div>
					<div class="rounded-full size-2 bg-slate-700"></div>
				</div>
				<Image
					src={meet}
					alt="woman teaching english"
					class="rounded-lg border border-gray-400"
				/>
			</div>
			<div class="flex flex-col gap-2 sm:max-w-[450px]">
				<span
					class="uppercase bg-darkGreen text-background text-[10px] w-fit px-2 rounded-lg tracking-widest pb-[1px]"
					>About us</span
				>
				<h1 class="font-Baloo text-2xl font-semibold md:text-4xl">
					We are all creatives at heart
				</h1>
				<p class="text-gray-500">
					We know that one of the most difficult parts of expanding
					your business is to trust somebody else to work alongside
					you. Thatâ€™s why we are here, when and where you need us, for
					all your English needs.
				</p>
				<a href="/aboutme/" class="flex items-center text-darkGreen"
					><span>About Me</span>
					<ChevronRightIcon className="w-5 pt-1 " />
				</a>
			</div>
		</div>
	</div>
</section>

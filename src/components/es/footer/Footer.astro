---
import { Image } from 'astro:assets';
import logo from '@/assets/logoWithText.png';
import ContactForm from './ContactForm.astro';
import TelegramIcon from '@/assets/TelegramIcon.astro';
import LinkedInIcon from '@/assets/LinkedInIcon.astro';
---

<footer id="contact" class="bg-darkGreen py-[7rem]">
	<div class="container max-w-[1200px] mx-auto">
		<div class="flex flex-col sm:flex-row-reverse gap-16 mb-16">
			<ContactForm />
			<div
				class="flex flex-col justify-between items-start gap-4 sm:w-[50%]"
			>
				<Image src={logo} alt="logo" width={120} class="mb-4" />
				<div class="text-background font-Baloo text-2xl">
					<h2 class="font-OpenSans mb-2">
						El poder de cambiar esta en tus manos
					</h2>
					<h3 class="font-bold">y lo sabes!</h3>
				</div>

				<ul
					class="flex flex-row justify-between items-start gap-2 text-background font-semibold font-Baloo md:gap-8"
				>
					<li>
						<a href="#services" class="hover:opacity-80"
							>Servicios</a
						>
					</li>
					<li>
						<a href="#about" class="hover:opacity-80">Acerca de</a>
					</li>
					<li>
						<a href="#" class="hover:opacity-80">Testimonios</a>
					</li>
					<li><a href="#" class="hover:opacity-80">Podcast</a></li>
				</ul>
				<div class="flex items-center gap-4 w-full">
					<a
						href=" https://t.me/englishcreativehub"
						target="_blank"
						class="font-semibold bg-darkGreen border border-background text-background py-1 px-4 rounded-sm hover:opacity-70 flex items-center justify-center gap-2"
						><TelegramIcon class="w-6" /> <span>Escribenos</span>
					</a>
					<a
						href="https://www.linkedin.com/in/janelle-e-french/"
						target="_blank"
						class="font-semibold bg-darkGreen border border-background text-background py-2 px-4 rounded-sm hover:opacity-70 flex items-center justify-center gap-2"
						><LinkedInIcon class="w-6" /> <span>Conectemos</span>
					</a>
				</div>
			</div>
			<hr class="mx-auto opacity-45" />
		</div>
	</div>
</footer>

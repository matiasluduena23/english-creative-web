---
import { DialogCalendly } from '@/components/ui/DialogCalendly';
import CardInfo from './CardInfo.astro';
import CardStep from './CardStep.astro';

const dataCardInfo: CardInfo[] = [
	{
		title: 'Liderar',
		text: 'Para necesidades a corto plazo y tareas puntuales',
		info: {
			couching: [
				'Refinando presentaciones y propuestas.',
				'Preparándose para entrevistas de trabajo soñadas.',
			],
			translation: [
				'Presentaciones y diapositivas de propuestas',
				'Páginas de aterrizaje de ventas y productos',
				'Cartas y correos electrónicos específicos',
				'Subtítulos de video',
				'Leyendas de fotografías',
			],
		},
	},
	{
		title: 'Construir',
		text: 'Para necesidades a mediano plazo y tareas basadas en proyectos',
		info: {
			couching: [
				'Desarrollando presentaciones y propuestas.',
				'Preparándose para reuniones estratégicas.',
			],
			translation: [
				'Páginas web completas',
				'Perfiles en redes sociales',
				'Material de comunicación:',
				'Boletines existentes',
				'Contenido preexistente en redes sociales',
			],
		},
	},
	{
		title: 'Crecer',
		text: 'Ideal para necesidades a largo plazo y tareas continuas',
		info: {
			couching: [
				'Siguiendo con inversores, productores, patrocinadores.',
				'Perfeccionando tu inglés empresarial.',
			],
			translation: [
				'Páginas web nuevas o actualizadas',
				'Material de comunicación nuevo o actualizado',
				'Boletines regulares',
				'Contenido regular en redes sociales',
			],
		},
	},
];

const dataCardSteps = [
	{
		id: 1,
		title: 'Programar una llamada',
		text: 'Programaremos una llamada introductoria para compartir detalles sobre tu emprendimiento con nosotros.',
	},
	{
		id: 2,
		title: 'Análisis de necesidades',
		text: 'Realizaremos un análisis de necesidades para adaptar nuestros servicios a tus requisitos específicos.',
	},
	{
		id: 3,
		title: 'Propuesta',
		text: 'Te enviaremos una propuesta personalizada que detalla tus necesidades, cronograma y alcance del proyecto.',
	},
	{
		id: 4,
		title: 'Cronograma del proyecto',
		text: 'Después de aceptar la propuesta, trabajaremos contigo para organizar un cronograma del proyecto.',
	},
	{
		id: 5,
		title: 'Cobrar vida',
		text: 'Verás cómo tu proyecto cobra vida en inglés y podrás hablar sobre él con confianza.',
	},
];
---

<section id="services" class="">
	<div class="bg-background py-[7rem]">
		<div class="container max-w-[350px] sm:max-w-[1200px] mx-auto">
			<span
				class="uppercase bg-background border border-darkGreen text-darkGreen text-[10px] w-fit px-2 rounded-lg tracking-widest pb-[1px] mb-4 block"
				>Servicios</span
			>
			<h1
				class="text-start text-4xl font-Baloo font-semibold text-gray-700 md:text-5xl mt-2"
			>
				Que hacemos
			</h1>
			<div
				class="grid gap-4 grid-cols-[repeat(auto-fill,minmax(300px,1fr))] justify-center mt-8"
			>
				{dataCardInfo.map((item) => <CardInfo card={item} />)}
			</div>
		</div>
	</div>
	<div class="bg-background py-[7rem]">
		<div class="container max-w-[350px] sm:max-w-[1200px] mx-auto">
			<h1
				class="text-start text-4xl font-Baloo font-semibold text-gray-700 md:text-5xl"
			>
				Como lo hacemos
			</h1>
			<div
				class="grid gap-4 grid-cols-[repeat(auto-fit,minmax(300px,1fr))] justify-center mt-6"
			>
				{
					dataCardSteps.map((item) => (
						<CardStep
							id={item.id}
							title={item.title}
							text={item.text}
						/>
					))
				}
				<article class="bg-darkGreen p-6 text-background">
					<h2 class="text-3xl text-balance font-bold mb-4">
						Estas listo para comenzar?
					</h2>
					<DialogCalendly client:load />
				</article>
			</div>
		</div>
	</div>
</section>

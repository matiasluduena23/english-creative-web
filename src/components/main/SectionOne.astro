---
import logoWhite from '@/assets/logoWhite.png';
import arrow from '@/assets/arrow.png';
import twoArrow from '@/assets/twoArrow.png';
import star from '@/assets/star.png';
import janelle from '@/assets/JanelleWorking.jpg';
import { Image } from 'astro:assets';
---

<section>
    <header class="bg-softBlue ">
        <div class="container">
            <div class="grid grid-cols-[1fr_200px_1fr] items-center">
                <div >
                    <Image
                        src={logoWhite}
                        alt="english creative logo brand"
                    />
                </div>
                <div >
                    <Image src={arrow} alt="arrow" />
                </div>
                <h2 class="text-3xl text-center text-background text-balance">
                    Getting more ideas out into the world
                </h2>
            </div>
        </div>
    </header>
    <div class="bg-white py-[5rem]">
        <div class="container">
            <h3 class="text-5xl text-foreground font-Baloo font-semibold text-center">Big ideas can't stay small</h3>
            <div class="grid grid-cols-2 items-center mt-[4rem]">
                <div class="relative text-center">
                   
                    <p class="text-[1.5rem] text-balance  font-semibold">
                        Expand your project's potencial through English
                        one-on-one mentoring
                    </p>
                    <Image
                        class="absolute -left-[20px]  -rotate-12 w-[150px]"
                        src={twoArrow}
                        alt="star"
                    />
                </div>
                <div class="relative ">
                    <Image
                       class='rounded-full relative z-10'
                        src={janelle}
                        alt="Janelle working with a laptop"
                    />
                    <Image class='absolute w-[130px] -top-8 -right-14 z-0' src={star} alt="star" />
                </div>
            </div>
        </div>
    </div>
</section>
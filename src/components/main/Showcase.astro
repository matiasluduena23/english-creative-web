---
import { Image } from 'astro:assets';
import { fade } from 'astro:transitions';
import thumbnail from '@/assets/thumbnail.jpg';
import { PlayIcon } from 'lucide-react';
---

<section id="home" class="py-[7rem]">
	<div class="container px-2 md:px-[2rem]">
		<h1
			class="text-4xl text-foreground text-center md:text-[3.5rem] font-Baloo font-bold"
		>
			<span
				class="text-darkGreen"
				transition:animate={fade({ duration: '0.5s' })}>Impact</span
			> the world with your
			<span
				class="text-darkGreen"
				transition:animate={fade({ duration: '0.5s' })}>ideas</span
			>
		</h1>

		<div class="max-w-[740px] mx-auto my-8 relative">

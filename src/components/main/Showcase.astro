<section id="home" class="py-[7rem]">
  <div class="container px-2 md:px-[2rem]">
    <h1
      id="heading"
      class="text-4xl text-foreground text-center md:text-[3.5rem] font-Baloo font-bold"
    >
      <span id="impact" class="text-darkGreen">Impact</span>
      <span id="world" class="text-focus-in">the world with your</span>
      <span id="ideas" class="text-darkGreen">ideas</span>
    </h1>

    <div class="max-w-[740px] mx-auto my-8 relative">
      <iframe
        id="video"
        class="aspect-video w-full z-0 h-full"
        src="https://www.youtube.com/embed/lcU9OaWBWHs?si=vc3Pa9VJSlZehu5m?controls=0"
        title="YouTube video player"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
        referrerpolicy="strict-origin-when-cross-origin"
        allowfullscreen></iframe>
    </div>

    <a
      id="btn-showcase"
      class="block font-semibold bg-darkOrange text-background py-3 px-6 rounded-sm mx-auto w-fit hover:opacity-70"
      href="#services">Get started</a
    >
  </div>
</section>
<script>
  import { animate, stagger } from 'motion';

  import SplitType from 'split-type';
  const headImpact = new SplitType('#impact', { types: 'words' });
  const headWorld = new SplitType('#world', { types: 'words' });
  const headIdea = new SplitType('#ideas', { types: 'words' });
  const video = document.querySelector('#video');
  const btnShowcase = document.querySelector('#btn-showcase');
  const title = [
    ...headImpact.words!,
    ...headWorld.words!,
    ...headIdea.words!,
    video!,
    btnShowcase!,
  ];

  animate(
    title,
    { y: [24, 0], opacity: [0, 1] },
    { duration: 1, delay: stagger(0.1) }
  );
</script>

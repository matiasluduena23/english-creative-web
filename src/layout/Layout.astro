---
import { ViewTransitions } from 'astro:transitions';
import '../styles/globals.css';

const { title } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Baloo+Tammudu+2:wght@400..800&family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap"
			rel="stylesheet"
		/>
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta
			name="description"
			content="Meet Janelle, your English coach. Learn how we help Spanish-speaking creators make a global impact with our English mentoring and translation services."
		/>
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body class="bg-background">
		<slot />
	</body>
</html>
